# Note that in links 2.14, the -force-html option does not work,
# consequentially rather than actually implementing this with a pipeline, we
# write out a temp file and then delete it afterwards.

set -u

FROM_TYPE="markdown"

if [ $# -ge 1 ] ; then
	FROM_TYPE="$1"
fi

TEMP_FILE="/tmp/$(uuidgen).html"
pandoc --from "$FROM_TYPE" --to html < /dev/stdin > "$TEMP_FILE" 2>/dev/null
links2 -no-g -width 79 -force-html -dump "file://$TEMP_FILE"
rm -f "$TEMP_FILE"
